@using DailyDine.Models.Menu;
@using Newtonsoft.Json;

@model CreateMenuModel
@{
    ViewData["Title"] = "Edit Menu";
}



<div>
    <h2>@ViewData["Title"]</h2>
    <hr />
    <form method="POST">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Date" class="control-label"></label>
            <input asp-for="Date" id="datepicker" type="date" class="form-control" value="@Model.Date.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        @if (Model.Products.Count > 0)
        {
            <ul>
                @for (int i = 0; i < Model.Products.Count; i++)
                {
                    <div class="form-check">
                        <input type="checkbox" asp-for="Selected[i]" checked="@Model.Selected[i]" />
                        <label asp-for="Selected[i]">@Model.Products[i].Name</label>
                        <input asp-for="Products[i].Id" type="hidden" value="@Model.Products[i].Id" />
                    </div>
                }
            </ul>
        }
        <button type="submit" class="btn btn-primary">Edit</button>
    </form>

</div>






