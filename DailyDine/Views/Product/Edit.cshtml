@using DailyDine.Models.Product
@model EditProductModel

@{
    ViewData["Title"] = "Edit Product";
}


<form method="POST" enctype="multipart/form-data">
    <h2>@ViewData["Title"]</h2>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label for="name">Name:</label>
        <input asp-for="Name" type="text" class="form-control" id="name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="description">Description:</label>
        <textarea asp-for="Description" class="form-control" id="description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="categoryId">Category:</label>
        <select asp-for="CategoryName" class="form-control" id="categoryId" >
            <option selected=@(Model.CategoryName == "Select a category") value="">Select a category</option>
            <option selected=@(Model.CategoryName == "Salads") value="Salads">Salads</option>
            <option selected=@(Model.CategoryName == "Soups") value="Soups">Soups</option>
            <option selected=@(Model.CategoryName == "Desserts") value="Desserts">Desserts</option>
            <option selected=@(Model.CategoryName == "Entrees/Main Courses") value="Entrees/Main Courses">Entrees/Main Courses</option>
        </select>
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="price">Price:</label>
        <input asp-for="Price" type="number" class="form-control" id="price" step="0.01">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="productImage">Product Image:</label>
        <input asp-for="ProductImage" type="file" class="form-control-file" id="productImage">
        <span asp-validation-for="ProductImage" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
</form>


